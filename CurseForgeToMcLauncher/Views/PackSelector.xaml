<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CurseForgeToMcLauncher.PackSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CurseForgeToMcLauncher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="PackTileTemplate">
            <StackPanel BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="4">
                <Image Source="{Binding Icon}"
                       Width="150"
                       Height="150" />
                <TextBlock Text="{Binding Name}"
                           FontSize="15"
                           Margin="10,10,10,0"
                           MaxWidth="130"
                           TextTrimming="CharacterEllipsis" />
                <TextBlock Text="{Binding LoaderVersion}"
                           Margin="10,10,10,10"
                           TextTrimming="CharacterEllipsis"
                           Foreground="LightGray"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Select Curseforge Modpacks"
                   Grid.Row="0"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,0" />
        <GridView Grid.Row="1"
                  x:Name="PacksGrid"
                  ItemTemplate="{StaticResource PackTileTemplate}"
                  ItemsSource="{x:Bind Packs}"
                  SelectionMode="Multiple"
                  Margin="50,0,50,0"
                  SelectionChanged="PacksGrid_SelectionChanged"/>

        <Grid Grid.Row="2"
              BorderBrush="DarkGray"
              BorderThickness="0,1,0,0">
            <Button Content="Start"
                    Width="120"
                    Height="40"
                    Margin="0,20,50,20"
                    FontSize="17"
                    HorizontalAlignment="Right"
                    Style="{StaticResource AccentButtonStyle}"
                    x:Name="Start"
                    Click="Start_Click"
                    IsEnabled="False"/>
            <Button Content="Back"
                    Width="120"
                    Height="40"
                    Margin="50,20,0,20"
                    FontSize="17"
                    HorizontalAlignment="Left"
                    x:Name="Back"
                    Click="Back_Click"/>
        </Grid>
    </Grid>
</Page>
