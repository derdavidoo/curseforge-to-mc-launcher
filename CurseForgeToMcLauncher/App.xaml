<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="CurseForgeToMcLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:CurseForgeToMcLauncher">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>

                <ResourceDictionary x:Key="Light">
                    <Color x:Key="AdaptiveColor">#e6e6e6</Color>
                    <SolidColorBrush x:Key="AdaptiveBrush"
                                     Color="{StaticResource AdaptiveColor}" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="AdaptiveColor">Black</Color>
                    <SolidColorBrush x:Key="AdaptiveBrush"
                                     Color="{StaticResource AdaptiveColor}" />
                </ResourceDictionary>

            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
